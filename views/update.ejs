<% include partials/header %>

<div class="ui raised very padded text container segment" style="margin-top:75px;">
    <h1>Edit Blog</h1>
    <form class="ui form" action="/blogs/<%=foundBlog._id%>/edit?_method=PUT" method="POST">
      <div class="field">
        <label>Name</label>
        <input type="text" value="<%= foundBlog.title %>" name="blog[title]">
      </div>
      <div class="field">
        <label>Created</label>
        <input type="text" value="<%= foundBlog.created.toDateString() %>" name="blog[created]">
      </div>
      <div class="field">
        <label>Image URL</label>
        <input type="text" value="<%= foundBlog.image %>" name="blog[image]">
      </div>
      <div class="field">
        <label>Body</label>
        <textarea name="blog[body]"><%= foundBlog.body %></textarea>
      </div>
      <button class="ui basic primary button" type="submit">Submit</button>
    </form>
</div>
<% include partials/footer %>